{% extends 'base.html.twig' %}

{% block title %}Livres empruntés{% endblock %}

{% block body %}
    <h3>Livres actuellement sortis</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Eleve</th>
                <th>DateEmprunt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for biblio_emprunt in biblio_emprunts %}
            <tr>
                <td>{{ biblio_emprunt.livre.titre }}</td>
                <td>{{ biblio_emprunt.eleve.prenom }} {{ biblio_emprunt.eleve.nom }} ({{ biblio_emprunt.eleve.section }})</td>
                <td>{{ biblio_emprunt.dateEmprunt ? biblio_emprunt.dateEmprunt|date('d/m/Y à H:i') : '' }}</td>
                <td>
                    <a href="{{ path('biblio_emprunt_show', {'id': biblio_emprunt.id}) }}">show</a>
                    <a href="{{ path('biblio_emprunt_edit', {'id': biblio_emprunt.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
