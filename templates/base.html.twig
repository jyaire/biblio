<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Bibliothèque{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>

    <body>
        <div class="container-fluid">

            {% block header %}
            <div class="row bg-dark text-white p-3">
                <div class="col font-weight-bold">
                    <a href="{{ path('home_index') }}" title="Accueil">Bibliothèque</a>
                </div>
                <div class="col text-right">
                    <a href="{{ path('admin_index') }}" title="Administration">Administration</a>
                </div>
            </div>
            {% endblock %}

            {% block body %}{% endblock %}

            {% block javascripts %}
                {{ encore_entry_script_tags('app') }}{% endblock %}
        </div>
    </body>
</html>
