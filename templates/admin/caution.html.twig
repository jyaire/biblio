{% extends 'base.html.twig' %}

{% block title %}Gestion des cautions{% endblock %}

{% block body %}
    <h3>Gestion des cautions</h3>
    <p><a href="{{ path('biblio_user_caution') }}">Accepter tous</a> -
        <a href="{{ path('biblio_user_caution') }}">Refuser tous</a></p>
    <ul class="text-left">
        {% for biblio_user in biblio_users %}
            <li>
                <p><a href="{{ path('biblio_user_show', {'id': biblio_user.id}) }}">
                        {{ biblio_user.nom }} {{ biblio_user.prenom }}
                    </a>
                    ({{ biblio_user.section }}) -
                    Peut emprunter :
                    {% if biblio_user.isCaution == 1 %}
                        oui - <a href="{{ path('biblio_user_caution', {'eleve': biblio_user.id}) }}">refuser</a>
                    {% else %}
                        non - <a href="{{ path('biblio_user_caution', {'eleve': biblio_user.id}) }}">accepter</a>
                    {% endif %}
                </p>
            </li>
        {% else %}
            <tr>
                <td colspan="11">Aucun élève</td>
            </tr>
        {% endfor %}
    </ul>

{% endblock %}
